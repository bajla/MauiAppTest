<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTest.Register">
    
    <ContentPage.Content>
        
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
            
                <Label
                    Text="Pozdravljen"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="Prosim registriraj se z svojim imenom in geslom"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Prosim vpisi se z svojim imenom in geslom" />
            
                <Entry x:Name="UserName" Placeholder="username" />
                <Entry x:Name="Pass" Placeholder="password" IsPassword="True" />
                
                <Button
                    x:Name="RegBtn"
                    Text="Register" 
                    Clicked="RegBtn_OnClicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>